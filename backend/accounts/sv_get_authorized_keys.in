#! @PERL@

use strict;
use Savane;

# imported
our $dbd;

my $user = $ARGV[0];
exit(0) unless $user;

my ($authorized_keys) = $dbd->selectrow_array(q[
    SELECT authorized_keys
    FROM user
    WHERE user_name = ?], undef, $user);

print join("\n", split('###', $authorized_keys));
print "\n";

exit(0);
