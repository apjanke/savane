CSS=`ls *.css.in internal/*.css.in`

all: update-path

update-path: clean
	for css in $(CSS); do \
		if [ "$(SV_URLROOT)" != "/" ]; then \
			cat $$css | sed s@url\(\"\/@url\(\"$(SV_URLROOT)\/@g > `dirname $$css`/`basename $$css .in` ; \
		else \
			cat $$css > `dirname $$css`/`basename $$css .in` ; fi \
		; \
	done

reset-path: 
	for css in $(CSS); do \
		cp -f $$css `dirname $$css`/`basename $$css .in` ; \
	done

clean:
	rm -f *.css internal/*.css
