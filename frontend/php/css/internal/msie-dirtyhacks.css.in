/* ****************************************
 Fix problem with the page width that would be to big */

.main {
	position: absolute;
	width: 80%;
	margin-left: 0.5%;
	overflow: visible
}

.menu {
 	margin-top: 2px;
	margin-left: 2px;
  	padding-left: 5px;
  	padding-right: 5px;
  	padding-bottom: 5px;
  	width: 14%;
}

.indexcenter {
	width: 100%;
}


/* ****************************************
 MSIE have a fixed feedback */

.feedbackback {
	display: none;
	width: 15%;
	margin-left: 70%;
}

.feedback, .feedbackerror {
	margin-top: 1em;
	margin-bottom: 1em;
	cursor: default;
}




h1, h2, h3, h4, h5, .feedback, .feedbackerror {
	margin-left: 2%;
	margin-left: 2%;
	width: 96%;

}

/* ****************************************
 Fix problems related to the top-menu */


#topmenu {
        float: left;
        padding-right: 0.5em;
        padding-left: 0.5em;
        padding-bottom: 1em;
        margin: 0;
}


#topmenuitem {
        float: left;
        padding-right: 0.5em;
        padding-left: 0.5em;
        padding-bottom: 0;
        margin: 0;
        line-height: 1em;
        list-style-type: none;
}

.topmenuitem {
	width: 80%;
	float: left;
	padding-left: 0;
 	overflow: visible;
}


li.topmenuitemmainitem {
      	position: static;
}

li.topmenuitemmainitem a { 
        display: block;
}


ul.topmenuitemsubmenu {
	visibility: visible;
        top: auto;
	left: -999em;
}

.topmenuitemsubmenu.hover ul {
	left: auto;
}

.topmenuitemsubmenu.sfhover ul {
	left: auto;
}


.topmenuitemsubmenu {
	/* This one is Ã¼ber-important, without it, MSIE will close the submenu
	   each time the mouse is over another link under the menu */ 
	background: #FBFFFF;
}




