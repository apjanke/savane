/* This is supposed to provide an old fashioned top menu for
   crappy/old browsers
   Needlessly to say, nothing fancy should be here. Only removal of fancy
   things.
*/


.topmenu {
	border: none;
	margin-right: 1em;
	padding-bottom: 0;
}

.topmenutitle {
	float: none;
	padding-left: 1%;
	padding-right: 1%;
}

.topmenuitem {
	border: none;
	padding: 0;
}

li.topmenuitemmainitem {
	float: none;
        position: static; 
}

li.topmenuitemmainitem a { 
	padding: 0; 
}
